<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Explorer.Avalonia.UI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Avalonia"
		WindowState="Maximized"
		WindowStartupLocation="CenterScreen"
	    xmlns:vm="using:Explorer.Avalonia.UI.ViewModels"
	    xmlns:vm2="using:Explorer.Shared.ViewModels"
	    xmlns:vm3="clr-namespace:TestLib.ViewModels;assembly=TestLib"
		>
	

	<Window.DataContext>
		<vm3:MainViewModel/>
	</Window.DataContext>
	
	<TextBlock Text="{Binding MainDiskName}"/>

</Window>
